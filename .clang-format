BasedOnStyle: LLVM

BreakBeforeBraces: Custom

BraceWrapping:
  AfterFunction: true
  AfterControlStatement: Never
  AfterEnum: false
  AfterStruct: false
  AfterClass: false
  AfterNamespace: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeElse: false
  BeforeCatch: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false

IndentWidth: 2
TabWidth: 2
UseTab: Never
ColumnLimit: 120
SpacesInLineCommentPrefix: false
